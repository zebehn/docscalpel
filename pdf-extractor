#!/usr/bin/env python3
"""
Executable entry point for DocScalpel CLI.

This script can be run directly: ./pdf-extractor paper.pdf
"""

import sys
from pathlib import Path

# Add parent directory to path to import docscalpel package
parent_dir = Path(__file__).parent
sys.path.insert(0, str(parent_dir))

from docscalpel.cli.main import main

if __name__ == '__main__':
    sys.exit(main())
